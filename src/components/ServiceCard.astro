---
export interface Props {
  title: string;
  description: string;
  image: string;
  price?: string;
  duration?: string;
  benefits?: string[];
}

const { title, description, image, price, duration, benefits } = Astro.props;
---

<div class="card hover-lift hover-glow fade-in">
  <div class="relative h-64 overflow-hidden img-hover-zoom">
    <img 
      src={image} 
      alt={title}
      class="img-responsive w-full h-full object-cover"
      loading="lazy"
    />
    <div class="absolute top-4 right-4">
      {price && (
        <span class="gradient-primary text-white px-4 py-2 rounded-full text-sm font-semibold shadow-md">
          {price}
        </span>
      )}
    </div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300"></div>
  </div>

  <div class="p-6">
    <h3 class="text-xl font-playfair font-semibold text-gray-900 mb-3">
      {title}
    </h3>
    
    <p class="text-gray-600 mb-4 leading-relaxed">
      {description}
    </p>

    {duration && (
      <div class="flex items-center text-sm text-gray-500 mb-4">
        <svg class="w-4 h-4 mr-2 text-secondary" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.414-1.414L11 9.586V6z" clip-rule="evenodd"/>
        </svg>
        Duración: {duration}
      </div>
    )}

    {benefits && benefits.length > 0 && (
      <div class="mb-6">
        <h4 class="text-sm font-semibold text-primary mb-3">✨ Beneficios:</h4>
        <ul class="space-y-2">
          {benefits.map((benefit) => (
            <li class="flex items-start text-sm text-gray-600">
              <svg class="w-4 h-4 mr-3 mt-0.5 text-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="leading-relaxed">{benefit}</span>
            </li>
          ))}
        </ul>
      </div>
    )}

    <div class="flex flex-col sm:flex-row gap-3 pt-4 border-t border-gray-100">
      <a href="/contacto" class="btn-primary flex-1 text-center">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
        </svg>
        Agendar Cita
      </a>
      <a href="/servicios" class="btn-outline flex-1 text-center">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        Más Info
      </a>
    </div>
  </div>
</div>
