---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import ContactForm from '../components/ContactForm.astro';
import StatsSection from '../components/StatsSection.astro';
import QuickReviewForm from '../components/QuickReviewForm.astro';
import { TestimonialService } from '../services/testimonials';

export const prerender = false;

// Obtener reseñas dinámicas de la base de datos
const testimonials = await TestimonialService.getFeaturedTestimonials(5);
const stats = await TestimonialService.getTestimonialStats();
